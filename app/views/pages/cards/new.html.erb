<div class="flex flex-col items-center justify-center py-6 px-4 sm:px-6 md:px-8">
  <div class="w-full max-w-sm sm:max-w-md lg:max-w-lg">
    <div class="p-6 sm:p-8 lg:p-10 rounded-2xl bg-white dark:bg-gray-800 shadow-lg hover:shadow-xl transition-shadow duration-300">
      <h2 class="text-gray-800 dark:text-white text-center text-2xl font-bold sm:text-3xl lg:text-4xl mb-6">
        Create Card
      </h2>

      <%= form_with(model: @card, local: true, html: { enctype: 'multipart/form-data', data: { controller: "file-upload" } }) do |f| %>

        <div class="mb-4">
          <%= f.label :title, class: "text-gray-800 dark:text-gray-200 text-sm sm:text-base mb-2 block" %>
          <%= f.text_area :title, required: true, class: "w-full text-gray-800 dark:text-white dark:bg-gray-700 text-sm sm:text-base border border-gray-300 dark:border-gray-600 px-4 py-3 rounded-md outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200", placeholder: "Enter Card Title" %>
        </div>

        <!--<div class="mb-4">
  <= f.label :collection, class: "text-gray-800 dark:text-gray-200 text-sm sm:text-base mb-2 block" %>
  <= render 'collection/select' %>
</div>-->

        <div class="mb-4">
          <%= f.label :description, class: "text-gray-800 dark:text-gray-200 text-sm sm:text-base mb-2 block" %>
          <%= f.text_area :description, required: true, rows: 4, class: "w-full text-gray-800 dark:text-white dark:bg-gray-700 text-sm sm:text-base border border-gray-300 dark:border-gray-600 px-4 py-3 rounded-md outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200", placeholder: "Enter Card Description" %>
        </div>

        <div class="mb-4">
          <%= f.label :images, "Upload Files", class: "text-gray-800 dark:text-gray-200 text-sm sm:text-base mb-2 block" %>
          <%= f.file_field :images, multiple: true, accept: "image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document",
                           direct_upload: true,
                           class: "hidden",
                           data: { action: "change->file-upload#addFiles", file_upload_target: "input" } %>

          <div class="w-full border border-gray-300 dark:border-gray-600 rounded-md p-4 text-center cursor-pointer bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition"
               data-action="click->file-upload#triggerFileInput">
            <p class="text-sm text-gray-600 dark:text-gray-300">Click to upload or drag & drop files</p>
          </div>

        <!-- Preview Area -->
        <div data-file-upload-target="preview" class="mt-4 flex flex-wrap gap-2"></div>
        </div>

        <div class="mb-4">
          <%= f.label :timer, class: "text-gray-800 dark:text-gray-200 text-sm sm:text-base mb-2 block" %>
          <%= f.time_field :timer, required: true, class: "w-full text-gray-800 dark:text-white dark:bg-gray-700 text-sm sm:text-base border border-gray-300 dark:border-gray-600 px-4 py-3 rounded-md outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200" %>
          <!--<= f.error_message_on(:time, class: "text-red-500 text-xs mt-1") %>-->
        </div>

        <div class="mt-8">
          <%= f.submit "Create Card", class: "w-full py-3 px-4 text-sm sm:text-base tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
