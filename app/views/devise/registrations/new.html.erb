<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="min-h-screen flex flex-col items-center justify-center py-6 px-4 sm:px-6 md:px-8 bg-gray-50 dark:bg-gray-900">
    <div class="w-full max-w-sm sm:max-w-md lg:max-w-lg">
      <div class="p-6 sm:p-8 lg:p-10 rounded-2xl bg-white dark:bg-gray-800 shadow-lg">

        <h2 class="text-gray-900 dark:text-gray-100 text-center text-2xl font-bold sm:text-3xl lg:text-4xl mb-6">
          Sign up
        </h2>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-6">
          <!-- Email Field -->
          <div class="mb-4">
            <%= f.label :email, class: "text-gray-700 dark:text-gray-300 text-sm sm:text-base mb-2 block font-medium" %>
            <div class="relative flex items-center">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-gray-900 dark:text-gray-200 text-sm sm:text-base border border-gray-200 dark:border-gray-600 px-4 py-3 rounded-lg outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-white dark:bg-gray-700", placeholder: "Enter Email" %>
            </div>
            <% if resource.errors[:email].any? %>
              <p class="text-red-500 text-xs mt-1"><%= resource.errors[:email].first %></p>
            <% end %>
          </div>

          <!-- Password Field -->
          <div class="mb-4">
            <%= f.label :password, class: "text-gray-700 dark:text-gray-300 text-sm sm:text-base mb-2 block font-medium" %>
            <div class="relative flex items-center">
              <%= f.password_field :password, autocomplete: "new-password", class: "w-full text-gray-900 dark:text-gray-200 text-sm sm:text-base border border-gray-200 dark:border-gray-600 px-4 py-3 rounded-lg outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-white dark:bg-gray-700", placeholder: "Enter Password" %>
            </div>
            <% if resource.errors[:password].any? %>
              <p class="text-red-500 text-xs mt-1"><%= resource.errors[:password].first %></p>
            <% end %>
          </div>

          <!-- Password Confirmation Field -->
          <div class="mb-4">
            <%= f.label :password_confirmation, class: "text-gray-700 dark:text-gray-300 text-sm sm:text-base mb-2 block font-medium" %>
            <div class="relative flex items-center">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-gray-900 dark:text-gray-200 text-sm sm:text-base border border-gray-200 dark:border-gray-600 px-4 py-3 rounded-lg outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-white dark:bg-gray-700", placeholder: "Confirm Password" %>
            </div>
            <% if resource.errors[:password_confirmation].any? %>
              <p class="text-red-500 text-xs mt-1"><%= resource.errors[:password_confirmation].first %></p>
            <% end %>
          </div>

          <!-- Submit Button -->
          <div class="!mt-8">
            <%= f.submit "Create an account", class: "w-full py-3 px-4 text-sm sm:text-base tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all" %>
          </div>
        </div>

        <!-- Link to Login Page -->
        <p class="text-gray-700 dark:text-gray-300 text-sm sm:text-base !mt-8 text-center">
          Already have an account?
          <%= link_to "Login here", new_user_session_path, class: "text-blue-600 dark:text-blue-400 font-semibold hover:underline ml-1" %>
        </p>
      </div>
    </div>
  </div>
<% end %>
